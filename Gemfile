source 'https://rubygems.org'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'
gem 'bcrypt'
gem 'bcrypt-ruby'

group :development do
  gem 'shotgun'
  gem 'pry'
  gem 'pry-nav'
end


group :test do
  gem 'faker'
  gem 'rspec'
  gem 'shoulda-matchers'
end
